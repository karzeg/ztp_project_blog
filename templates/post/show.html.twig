{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.post_details'|trans({'%id%': post.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.post_details'|trans({'%id%': post.id|default('')}) }}</h1>

    {% if post is defined and post|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ post.id }}</dd>
            <dt>{{ 'label.date'|trans }}</dt>
            <dd>{{ post.date|date('d/m/Y') }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{  post.title }}</dd>
            <dt>{{ 'label.content'|trans }}</dt>
            <dd>{{  post.content }}</dd>
            <dt>{{ 'label.category'|trans }}</dt>
            <dd>
                    <a href="{{ url('category_show', {id: post.category.id}) }}" title="{{ 'category_show'|trans }}">
                        {{ post.category.title }}
                    </a>
            </dd>
            <dt>{{ 'label.tags'|trans }}</dt>
            <dd>
                {% for tag in post.tags %}
                    <a href="{{ url('tag_show', {id: tag.id}) }}" title="{{ 'tag_show'|trans }}">
                        {{ tag.title }}{{ ',' }}
                    </a>
                {% endfor %}
            </dd>
        </dl>
        <br>

        <h4>
            {{ 'label_comments'|trans }}
        </h4>

        <p>
            {% if is_granted('ROLE_USER') %}
            <a href="{{ url('comment_create', {id: post.id}) }}" title="{{ 'action.create'|trans }}">
                {{ 'action.create'|trans }}
            </a>
            {% endif %}
        </p>

        <table class="table">
            <tbody>
            {% for comment in post.comments %}
                <tr>
                    <td>{{ comment.date|date('d/m/Y') }}</td>
                    <td>{{ comment.content }}</td>
                    <td>{{ comment.author.login }}</td>

                    {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        <a href="{{ url('comment_delete', {id: post.id}) }}" title="{{ 'action.delete'|trans }}">
                            <svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                            </svg>
                        </a>
                    </td>
                    {% endif %}
                    {% if is_granted('EDIT', comment) %}
                        <td>
                            <a href="{{ url('comment_edit', {id: comment.id}) }}" title="{{ 'action.edit'|trans }}">
                                <svg class="bi bi-pencil" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M11.293 1.293a1 1 0 0 1 1.414 0l2 2a1 1 0 0 1 0 1.414l-9 9a1 1 0 0 1-.39.242l-3 1a1 1 0 0 1-1.266-1.265l1-3a1 1 0 0 1 .242-.391l9-9zM12 2l2 2-9 9-3 1 1-3 9-9z"/>
                                    <path fill-rule="evenodd" d="M12.146 6.354l-2.5-2.5.708-.708 2.5 2.5-.707.708zM3 10v.5a.5.5 0 0 0 .5.5H4v.5a.5.5 0 0 0 .5.5H5v.5a.5.5 0 0 0 .5.5H6v-1.5a.5.5 0 0 0-.5-.5H5v-.5a.5.5 0 0 0-.5-.5H3z"/>
                                </svg>
                            </a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <p>
            <a href="{{ url('post_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}